<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/bus1" />

    <Button
        android:id="@+id/share_Location"
        android:text="View LOCATION"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:background="@drawable/ripple"
        android:paddingLeft="25sp"
        android:textAlignment="textStart"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_marginTop="50dp"
        android:drawableRight="@drawable/icon_viewlocation_04__1_"
        />

    <Button
        android:id="@+id/instruction"
        android:text="MESSAGES"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:background="@drawable/ripple"
        android:paddingLeft="25sp"
        android:textAlignment="textStart"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/icon_message_04"/>

    <Button
        android:id="@+id/timetable"
        android:text="Timetable"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:background="@drawable/ripple"
        android:paddingLeft="25sp"
        android:textAlignment="textStart"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/icon_timetable_04"/>

    <Button
        android:id="@+id/complaint"
        android:text="Grievances"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:background="@drawable/ripple"
        android:paddingLeft="25sp"
        android:textAlignment="textStart"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/icon_complaint_04"/>

    <Button
        android:id="@+id/logout"
        android:text="LOGOUT"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:background="@drawable/ripple"
        android:paddingLeft="25sp"
        android:textAlignment="textStart"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/icon_logout_04__1_"/>

</LinearLayout>